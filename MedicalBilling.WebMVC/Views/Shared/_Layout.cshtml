<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Medical Billing Code</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-fixed-top bg-info">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Medical Billing Code", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Diagnoses", "Index", "Diagnosis")</li>
                    <li>@Html.ActionLink("Procedures", "Index", "Procedure")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>

                </ul>
                <form class="navbar-form navbar-right" action="~/Diagnosis">
                    <div class="input-group">
                        @using (Html.BeginForm("Index", "Diagnosis", FormMethod.Get))
                        {
                            @Html.TextBox("search")<input type="submit" value="Search" />
                        }
                    </div>
                </form>
            </div>
           
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer style="bottom:0;position:fixed;">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            @Html.ActionLink("Contact", "Contact", "Home")
            @Html.ActionLink("Role", "Index", "Role")
            @Html.Partial("_LoginPartial")
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
